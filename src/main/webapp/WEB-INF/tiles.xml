		<put-attribute name="main" value="/WEB-INF/view/player/{1}.jsp" />
		<put-attribute name="footer" value="/WEB-INF/view/inc/footer.jsp" />
	</definition>
	<definition name="ranking.*" template="/WEB-INF/view/inc/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/view/inc/header.jsp" />
